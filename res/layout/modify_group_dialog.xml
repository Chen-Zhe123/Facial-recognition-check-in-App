<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="300dp"
        android:layout_height="200dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定要修改本组信息吗？"
            android:textSize="15sp"
            android:paddingBottom="15dp"
            android:paddingTop="20dp"
            android:layout_gravity="center"/>
        <RelativeLayout
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_gravity="center|bottom"
            android:gravity="center|bottom">

            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/modify_name"
                android:text="组名:"
                android:layout_centerVertical="true"
                android:textSize="12sp"/>
            <EditText
                android:id="@+id/modify_group_name_edit"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/modify_name"
                android:hint="请输入更改后的组名"
                android:textSize="12sp"
                android:textColor="@color/black" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/modify_id"
                android:text="描述:"
                android:layout_centerVertical="true"
                android:textSize="12sp"/>
            <EditText
                android:id="@+id/modify_group_description_edit"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/modify_id"
                android:hint="请输入更改后的组描述"
                android:textSize="12sp"

                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:gravity="center">
            <Button
                android:id="@+id/ensure_modify_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确定"
                android:layout_weight="1"
                android:padding="5dp"/>
            <Button
                android:id="@+id/cancel_modify_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                android:layout_weight="1"
                android:padding="5dp"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>