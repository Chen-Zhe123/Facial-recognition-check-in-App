<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="175dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/modify_dialog_title"
            android:textSize="15sp"
            android:paddingBottom="15dp"
            android:paddingTop="10dp"
            android:layout_gravity="center"/>
        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_gravity="center|bottom"
            android:gravity="center|bottom">

        <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/modify_name"
                android:text="姓名:"
                 android:layout_centerVertical="true"
                android:textSize="12sp"/>
            <EditText
                android:id="@+id/new_name"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/modify_name"
                android:hint="请输入更改后的姓名"
                android:textSize="12sp"
                android:textColor="@color/black" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/modify_id"
                android:text="学号:"
                android:layout_centerVertical="true"
                android:textSize="12sp"/>
            <EditText
                android:id="@+id/new_id"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/modify_id"
                android:hint="请输入更改后的学号"
                android:textSize="12sp"

                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center">
            <Button
                android:id="@+id/modify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确定"
                android:layout_weight="1"
                android:padding="5dp"/>
            <Button
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                android:layout_weight="1"
                android:padding="5dp"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>