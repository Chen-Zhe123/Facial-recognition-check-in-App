<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#282828"
    android:paddingRight="30px"
    android:paddingLeft="30px"
    android:paddingBottom="15px"
    android:id="@+id/mainActivity"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="122px">
        <ImageView
            android:layout_width="106px"
            android:src="@drawable/logo"
            android:layout_height="106px"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="#f0f0f0"
                android:text="@string/title_USB"
                android:layout_height="wrap_content"
                android:textSize="28px"/>
            <TextView
                android:layout_width="wrap_content"
                android:textColor="#f0f0f0"
                android:text="@string/title_USB_en"
                android:layout_height="wrap_content"
                android:textSize="18px"/>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                layout="@layout/time_layout"/>
        </RelativeLayout>
    </LinearLayout>

        <RelativeLayout
            android:background="@drawable/face_msg_bg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:layout_gravity="center_horizontal"
                          android:gravity="center_horizontal">

                <FrameLayout
                    android:background="@color/colorAccent"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextureView
                        android:id="@+id/camera_surface_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <com.orbbec.view.OpenGLView
                        android:id="@+id/rgbGlView"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <TextureView
                        android:id="@+id/texture0"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="90px"
                        android:paddingLeft="5px"
                        android:gravity="center_vertical"
                        android:layout_gravity="bottom"
                        android:background="@drawable/face_msg_bg"
                        android:orientation="vertical"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true">
                        <TextView
                            android:id="@+id/detect_duration_tv"
                            android:textColor="#ff6600"
                            android:textSize="15px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/rgb_liveness_duration_tv"
                            android:textColor="#ff6600"
                            android:textSize="15px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textSize="15px"
                            android:id="@+id/rgb_liveness_score_tv"
                            android:layout_width="wrap_content"
                            android:textColor="#ff6600"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </FrameLayout>
                <FrameLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <com.orbbec.view.OpenGLView
                        android:id="@+id/depthGlView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="8px"
                        android:id="@+id/tvAttr"
                        android:textColor="@color/color_f0f0f0"
                        android:layout_marginBottom="85px"
                        android:layout_gravity="bottom"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="90px"
                        android:layout_gravity="bottom"
                        android:paddingLeft="5px"
                        android:gravity="center_vertical"
                        android:background="@drawable/face_msg_bg"
                        android:orientation="vertical"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true">

                        <TextView
                            android:id="@+id/depth_liveness_duration_tv"
                            android:textColor="#ff6600"
                            android:textSize="15px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/depth_liveness_score_tv"
                            android:textColor="#ff6600"
                            android:textSize="15px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/addUserLayout"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:layout_gravity="bottom|right"
                        android:layout_width="176px"
                        android:layout_height="90px">

                        <LinearLayout
                            android:layout_width="160px"
                            android:layout_height="48px"
                            android:gravity="center_vertical"
                            android:background="@drawable/adduser_bg"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="28px"
                                android:layout_height="28px"
                                android:layout_marginLeft="24px"
                                android:src="@drawable/add_icon"/>
                            <TextView
                                android:layout_marginLeft="10px"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/add_user"
                                android:textSize="17px"
                                android:textColor="#f0f0f0"/>
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="30px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#cccccc"
            android:textSize="20px"
            android:text="@string/recorder"/>

        <com.firefly.face1.view.HorizontalListView
            android:id="@+id/recordScrollView"
            android:layout_marginTop="16px"
            android:layout_width="match_parent"
            android:layout_height="180px"/>
    </LinearLayout>
</LinearLayout>

