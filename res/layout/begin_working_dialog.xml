<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="300dp"
        android:layout_height="250dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定开始本次签到吗?"
            android:textSize="16sp"
            android:paddingBottom="5dp"
            android:paddingTop="10dp"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="（请检查以下内容并设置签到时间)"
            android:textSize="12sp"
            android:textColor="#D83232"
            android:paddingBottom="10dp"
            android:layout_gravity="center"/>
        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_gravity="center|bottom"
            android:gravity="center|bottom">

            <TextView
                android:id="@+id/default_group_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本次签到的组为:"
                android:layout_centerVertical="true"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/default_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/default_group_title"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:id="@+id/default_living_type_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本次签到的活体类型为:"
                android:layout_centerVertical="true"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/default_living_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/default_living_type_title"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请设置本次签到历时:"
                android:textSize="12sp"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center">
            <Button
                android:id="@+id/ensure_begin_working"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确定"
                android:layout_weight="1"
                android:padding="5dp"/>
            <Button
                android:id="@+id/cancel_begin_working"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                android:layout_weight="1"
                android:padding="5dp"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>